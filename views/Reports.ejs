    <div class="main-content">
        <header>
            <h1>Reports</h1>
        </header>
        <div class="content">
            <h2>Generate Reports</h2>
            <form id="reportForm">
                <label for="reportType">Report Type:</label>
                <select id="reportType" name="reportType" required>
                    <option value="">Select a report type</option>
                    <option value="crop">Crop Report</option>
                    <option value="livestock">Livestock Report</option>
                    <option value="inventory">Inventory Report</option>
                </select>
                <br>
                <label for="startDate">Start Date:</label>
                <input type="date" id="startDate" name="startDate" required>
                <br>
                <label for="endDate">End Date:</label>
                <input type="date" id="endDate" name="endDate" required>
                <br>
                <button type="submit">Generate Report</button>
            </form>
            <div id="reportResult">
                <!-- The generated report will be displayed here -->
                 <!-- Print Button -->
    <div class="print-button-container">
        <button onclick="printReport()" class="button">Print Report</button>
    </div>
            </div>
        </div>
    </div>
    <script src="/JS Files/Reports.js"></script>
</body>
